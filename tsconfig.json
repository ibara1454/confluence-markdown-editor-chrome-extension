{
  "compilerOptions": {
    "target": "es2015",
    "module": "esNext",
    "strict": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.js",
    "tests/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
